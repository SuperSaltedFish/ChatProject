<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yzx.chat">

    <!-- 允许程序振动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 允许程序访问网络连接 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序访问摄像头进行拍照 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 允许程序可以读取设备外部存储空间 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 允许程序写入外部存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络信息状态，如当前的网络连接是否有效 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序使用录音设备 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:name=".configure.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DefaultLightTheme">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />


        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/LoginTheme">

        </activity>
        <activity
            android:name=".view.activity.HomeActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".view.activity.ChatActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity
            android:name=".view.activity.QrCodeScanActivity"
            android:theme="@style/NoBackgroundDarkTheme">

        </activity>
        <activity
            android:name=".view.activity.ImageSelectorActivity"
            android:theme="@style/BaseDarkTheme">

        </activity>
        <activity android:name=".view.activity.ContactProfileActivity">

        </activity>

        <activity android:name=".view.activity.FindNewContactActivity">

        </activity>

        <activity android:name=".view.activity.RemarkInfoActivity" >

        </activity>


        <activity android:name=".view.activity.TestActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

    </application>

</manifest>