<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item><!--这个颜色会影响按钮置灰的颜色-->

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryBlack</item>
        <item name="android:textColorTertiary">@color/textColorSecondaryBlack</item>
        <item name="android:textAllCaps">false</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="buttonStyleSmall">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowEnableSplitTouch">false</item><!--全用多点触控-->

        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:splitMotionEvents">false</item><!--全用多点触控-->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">?colorAccent</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyleNoBackground" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_text_color_accent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/selector_edit_default</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/selector_text_color_primary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColorHint">@color/textColorSecondaryBlackLight</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">?android:attr/android:textColorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ToolbarLightStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ToolbarTitleTextAppearance.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AlertDialogStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/bg_dialog_default</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowElevation">16dp</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DialogFragmentStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowElevation">16dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleTextAppearance.Light" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopupMenuAnimation_Left_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_top</item>
    </style>

    <style name="PopupMenuAnimation_Right_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_top</item>
    </style>

    <style name="PopupMenuAnimation_Left_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_bottom</item>
    </style>

    <style name="PopupMenuAnimation_Right_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_bottom</item>
    </style>

</resources>
