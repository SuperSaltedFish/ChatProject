<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <ImageView
        android:id="@+id/RegisterFragment_mIvBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_back"
        android:tint="@color/textPrimaryColorBlack2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="NEW ACCOUNT ?"
        android:textColor="@color/textPrimaryColorBlack2"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create your new account. You can\nsign up with facebook also."
        android:textColor="@color/textSecondaryColorBlackLight"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_telephone2" />

        <EditText
            android:id="@+id/RegisterFragment_mEtTelephone"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/LoginActivity_Layout_Username"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:id="@+id/RegisterFragment_mTelephoneUnderline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_bg_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/RegisterFragment_mEtNickname"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/LoginActivity_Layout_InputNick"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/RegisterFragment_mNicknameUnderline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_bg_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/RegisterFragment_mEtPassword"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/LoginActivity_Layout_InputPassword"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/RegisterFragment_mPasswordUnderline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_bg_underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_password_again" />

        <EditText
            android:id="@+id/RegisterFragment_mEtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:hint="@string/LoginActivity_Layout_Confirm"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/RegisterFragment_mConfirmPasswordUnderline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_bg_underline" />


    <TextView
        android:id="@+id/RegisterFragment_mTvErrorHint"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ProgressBar
            android:id="@+id/RegisterFragment_mPbRegisterProgress"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <Button
            android:id="@+id/RegisterFragment_mBtnRegister"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/radius_btn_4dp"
            android:elevation="4dp"
            android:text="@string/LoginActivity_Layout_Register"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/RegisterFragment_mTvLoginHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoginActivity_Layout_HasUsernameHint"
            android:textColor="@color/selector_text_enable_change"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/RegisterFragment_mTvJumpToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoginActivity_Layout_Login"
            android:textColor="@color/selector_text_enable_change"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="8dp"
        android:text="@string/LoginActivity_Layout_CopyrightHint"
        android:textSize="12sp" />

</LinearLayout>
