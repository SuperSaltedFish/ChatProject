<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.group.view.CreateGroupActivity">

    <include layout="@layout/include_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CreateGroupActivity_mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CreateGroupActivity_mTvIndexBarHint"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_index_bar_hint"
            android:gravity="center"
            android:textColor="@color/textColorWhite"
            android:textSize="44sp"
            android:visibility="invisible" />


        <com.yzx.chat.widget.view.IndexBarView
            android:id="@+id/CreateGroupActivity_mIndexBarView"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_index_bar"
            android:paddingBottom="2dp"
            android:paddingTop="4dp" />

    </LinearLayout>


</merge>