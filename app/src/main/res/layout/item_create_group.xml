<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingEnd="32dp"
    android:paddingStart="12dp">

    <CheckBox
        android:id="@+id/CreateGroupAdapter_mCbIsSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/CreateGroupAdapter_mIvAvatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/temp_head_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/CreateGroupAdapter_mCbIsSelected"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CreateGroupAdapter_mTvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/textPrimaryColorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/CreateGroupAdapter_mIvAvatar"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>