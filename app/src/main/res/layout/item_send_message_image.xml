<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="10dp"
    android:paddingTop="6dp"
    android:paddingEnd="10dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/mTvTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/textColorSecondaryBlackLight"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mIvFailState"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@drawable/ic_send_fail"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/mIvImageContent"
        app:layout_constraintEnd_toStartOf="@id/mIvImageContent"
        app:layout_constraintTop_toTopOf="@id/mIvImageContent" />

    <ProgressBar
        android:id="@+id/mPbSendState"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/mIvImageContent"
        app:layout_constraintEnd_toStartOf="@id/mIvImageContent"
        app:layout_constraintTop_toTopOf="@id/mIvImageContent" />

    <com.yzx.chat.widget.view.RoundImageView
        android:id="@+id/mIvImageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        android:maxWidth="160dp"
        android:maxHeight="160dp"
        android:scaleType="centerCrop"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mTvTime" />


</androidx.constraintlayout.widget.ConstraintLayout>
