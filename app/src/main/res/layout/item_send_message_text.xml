<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="6dp"
    android:paddingEnd="10dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/mIvFailState"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:src="@drawable/ic_send_fail"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/mTvTextContent"
        app:layout_constraintEnd_toStartOf="@id/mTvTextContent"
        app:layout_constraintTop_toTopOf="@id/mTvTextContent" />

    <ProgressBar
        android:id="@+id/mPbSendState"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/mTvTextContent"
        app:layout_constraintEnd_toStartOf="@id/mTvTextContent"
        app:layout_constraintTop_toTopOf="@id/mTvTextContent" />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/mTvTextContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:background="@drawable/bg_chat_send"
        android:gravity="center_vertical"
        android:minHeight="46dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/textColorWhite"
        android:textSize="15sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
