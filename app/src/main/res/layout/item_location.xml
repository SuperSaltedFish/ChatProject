<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingEnd="12dp"
    android:paddingStart="12dp">

    <TextView
        android:id="@+id/LocationAdapter_mTvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/LocationAdapter_mTvAddress"
        app:layout_constraintEnd_toStartOf="@id/LocationAdapter_mIvSelectedIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/LocationAdapter_mTvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/LocationAdapter_mIvSelectedIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LocationAdapter_mTvName" />

    <ImageView
        android:id="@+id/LocationAdapter_mIvSelectedIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_selected"
        android:tint="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>